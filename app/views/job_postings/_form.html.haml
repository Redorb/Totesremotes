= form_for(@job_posting) do |f|
  - if @job_posting.errors.any?
    #error_explanation
      %h2
        = pluralize(@job_posting.errors.count, "error")
        prohibited this job_posting from being saved:
      %ul
        - @job_posting.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :job
    %br/
    = f.text_field :job
  .field
    = f.label :company
    %br/
    = f.text_field :company
  .field
    = f.label :tags
    %br/
    = f.text_field :tags
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .field
    = f.label :location
    %br/
    = f.text_field :location
  .field
    = f.label :salary
    %br/
    = f.number_field :salary
  .actions
    = f.submit
